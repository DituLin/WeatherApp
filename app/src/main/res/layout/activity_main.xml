<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/digital_background"
    tools:context="atu.com.weatherapp.ui.activity.MainActivity">

    <!--<android.support.v7.widget.RecyclerView-->
        <!--android:id="@+id/forecast_list"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->

    <!--</android.support.v7.widget.RecyclerView>-->

    <atu.com.weatherapp.ui.widget.DigialTubeView
        android:id="@+id/digitalTubeView"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="5dp"
            app:srcCompat="@mipmap/img_permission_logo_weather" />

        <TextView
            android:id="@+id/tv_weatherTem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_03a9f4"
            android:layout_margin="@dimen/spacing_xlarge"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:text="37Â°C" />

        <TextView
            android:id="@+id/tv_weatherDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_03a9f4"
            android:layout_margin="@dimen/spacing_xlarge"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:text="light rain" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_settings"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="5dp"
        android:layout_gravity="right"
        android:visibility="gone"
        app:srcCompat="@mipmap/bar_icon_settings" />


</FrameLayout>
